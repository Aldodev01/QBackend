generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  username     String
  email        String    @unique
  password     String
  phone        String?
  employee_no  String    @unique
  profile_pic  String?
  status       String
  join_date    DateTime  @default(now())
  contract_end DateTime
  Absence      Absence[]
  login        Boolean   @default(false)
}

model Absence {
  id        String    @id @default(uuid())
  user      User      @relation(fields: [user_id], references: [id])
  user_id   String
  date      DateTime
  time_in   DateTime?
  time_out  DateTime?
  latitude  String
  longitude String
  status    String
  late      Boolean   @default(false)
}

model Location {
  id        String @id @default(uuid())
  name      String
  latitude  String
  longitude String
  range     Int
}
